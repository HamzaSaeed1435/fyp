<div style="display: block;" id="letter" class="letter col-lg-8 col-md-6 ">
<div class="card card-static-2 mb-30">
<div class="card-title-2">
<h4>Apply for letter </h4>
</div>
<div class="card-body-table">
<div class="news-content-right pd-20">
<div class="row">
<div class="col-lg-12">
<form method="post" action="AddQueries">
<input type="hidden" name="type" value="letter">
<div class="form-group">
  
<label class="form-label">Choose Letter type*</label>
<select id="status" required name="letter" class="form-control">
    {{#each types}}
  {{#iftype typeId value=2 type=typeId}}
<option  value="{{subTypeId}}">{{app_Name}}</option>
{{/iftype}}
 {{/each}}
</select>
</div>
<div class="form-group">
<label class="form-label">Comments</label>
<input type="text" name="comment" type="text" class="form-control" placeholder="">
</div>
<button class="save-btn hover-btn" type="submit">Save Changes</button>
</form>
</div>
</div>
</div>
</div>
</div>
</div>

{{!-- certificate --}}
