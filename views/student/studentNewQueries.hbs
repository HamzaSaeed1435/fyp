<script>
    
function myFunction(type) {

    var a = document.getElementById('letter');
    var b = document.getElementById('certificate');
var c = document.getElementById('application');
    
  var x = document.getElementById(type);

  if(type==="letter"){
       x.style.display = "block";
       b.style.display = "none";
       c.style.display = "none";
  }else  if(type==="certificate"){
       x.style.display = "block";
       a.style.display = "none";
       c.style.display = "none";
  }
  else  if(type==="application"){
       x.style.display = "block";
       a.style.display = "none";
       b.style.display = "none";
  }
  
}


jQuery("a.letter").click(function(){
   jQuery(".letters").trigger("click");
   return false;
});
jQuery("a.application").click(function(){
   jQuery(".applications").trigger("click");
   return false;
});
jQuery("a.certificate").click(function(){
   jQuery(".certificates").trigger("click");
   return false;
});
</script>
