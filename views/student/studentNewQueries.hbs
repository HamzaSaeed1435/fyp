<h4>Apply for Certificate </h4>
</div>
<div class="card-body-table">
<div class="news-content-right pd-20">
<div class="row">
<div class="col-lg-12">
<form method="post" action="AddQueries">
<input type="hidden" name="type" value="certificate">
<div class="form-group">
  
<label class="form-label">Choose Certificate type*</label>
<select id="status" name="certificate" required class="form-control">
    {{#each types}}
  {{#iftype typeId value=3 type=typeId}}
<option  value="{{subTypeId}}">{{app_Name}}</option>
{{/iftype}}
 {{/each}}
</select>
</div>
<div class="form-group">
<label class="form-label">Comments</label>
